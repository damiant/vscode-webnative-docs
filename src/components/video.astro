---
interface Props {
  src: string;
  alt?: string;
  aspectRatio?: string;
  autoplay?: boolean;
  controls?: boolean;
  loop?: boolean;
  muted?: boolean;
}

const { 
  src, 
  alt = "Video",
  aspectRatio = "2.7 / 2",
  autoplay = true, 
  controls = true, 
  loop = true, 
  muted = false 
} = Astro.props;
---

<div class="video-container">
  <video 
    width="100%" 
    {autoplay} 
    {controls} 
    {loop} 
    {muted}
    style={`aspect-ratio: ${aspectRatio}`}
    playsinline>
    <source src={src} type="video/mp4" />
    {alt && <p>{alt}</p>}
    Your browser does not support the video tag.
  </video>
</div>

<style>
  .video-container {
    margin: 0;
  }
  
  video {
    display: block;
    max-width: 100%;
    border-radius: 0.5rem;
  }
</style>
